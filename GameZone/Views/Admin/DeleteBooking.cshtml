@model GameZone.Models.Booking
@{
    ViewData["Title"] = "Delete Booking";
}

<div class="delete-booking">
    <h1>Delete Booking</h1>
    <h3>Are you sure you want to delete this booking for @Model.User?.UserName?</h3>
    <p><strong>Game:</strong> @Model.Game?.Name</p>
    <p><strong>Date:</strong> @Model.BookingDate.ToShortDateString()</p>
    <p><strong>Time:</strong> @Model.BookingTime</p>
    <p><strong>Duration:</strong> @Model.Duration hours</p>

    <form asp-action="DeleteBooking" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Bookings" class="btn btn-secondary">Cancel</a>
    </form>
</div>